<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_stage_view_tree" model="ir.ui.view">
        <field name="model">res.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="state"/>
                <field name="model_id"/>
            </tree>
        </field>
    </record>

    <record id="res_stage_view_search" model="ir.ui.view">
        <field name="model">res.stage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="model_id"/>
                <field name="res_model"/>
                <separator />
                <group expand="0" string="Group By">
                    <filter
                        string="Model"
                        name="model_id"
                        domain="[]"
                        context="{'group_by':'model_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record id="res_stage_view_form" model="ir.ui.view">
        <field name="model">res.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="model_id"/>
                            <field name="sequence"/>
                            <field name="action_create_user" invisible="state != 'first'"/>
                            <field name="validation_by"/>
                            <field name="user_ids" invisible="validation_by != 'user'" widget="many2many_tags"/>
                            <field name="group_ids" invisible="validation_by != 'group'" widget="many2many_tags"/>
                            <field name="python_code" invisible="validation_by != 'code'"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page name="action_ids" string="Actions">
                            <field name="action_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="class_name"/>
                                    <field name="action"/>
                                </tree>     
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="res_stage_action" model="ir.actions.act_window">
        <field name="name">Stage</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    
</odoo>