<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       
    <record id="sh_res_config_settings_inherit_view_form" model="ir.ui.view">
        <field name="name">sh.res.config.settings.inherit.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <app name="sale_management" position="inside">
                <block title="Purchase Orders" name="sale_config_online_confirmation_sign">
                    <setting id="rounding_method" company_dependent="1" help="Approval minimum amount based on: Untaxed / Total">
                        <field name="approval_based_on" class="o_light_label mt16" widget="radio"/>
                    </setting>
                </block>
            </app>         
        </field>
    </record>
    
</odoo>